@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome noob</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>

    <h1>Welcome noob :)</h1>
    <h2>You have been hacked</h2>
    <p>We have your data:</p>
    <table width="100%">
        @foreach (var customer in Model.customers)
        {
            <tr>
                <td>
                    @customer.CustomerID
                </td>
                <td>
                    @customer.CompanyName
                </td>
            </tr>
        }
    </table>
</body>
</html>
